---
import { Icon } from "fulldev-ui";

interface Props {
  title: string;
  icon: string;
  href?: string;
}

const { title, icon, href } = Astro.props;
---

<a class="hreffix" href={href ?? "#"} target={href ? "_blank" : undefined}>
  <div class="socialCard">
    {icon && <Icon name={icon} />}
    <span>{title}</span>
  </div>
</a>

<style>
  .hreffix {
    max-width: fit-content;
  }

  .socialCard {
    display: flex;
    align-items: center;
    padding: 10px;
    border-radius: 10px;
    transition: background-color 0.2s;
    gap: 10px;
  }

  .socialCard:hover {
    background-color: #f0f0f0;
  }

  .socialIcon {
    width: 30px;
    height: 30px;
    border-radius: 100%;
  }
</style>
