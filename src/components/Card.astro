---
interface Props {
	backgroundColor?: string;
	name: string;
	desc?: string;
	icon?: string;
	href?: string;
}

const { backgroundColor, name, desc, icon, href } = Astro.props;
---

<a href={href ?? "#"} target={href ? "_blank" : undefined}>
	<div
		class="projectcard"
		style={{ background: backgroundColor ?? "var(--secondary-surface)" }}
	>
		{
			icon && (
				<div class="icon">
					<img src={icon} alt="Project Icon" class="projectIcon" />
				</div>
			)
		}
		<div class="right_side">
			<h1>{name}</h1>
			{desc && <p>{desc}</p>}
		</div>
	</div>
</a>

<style>
	.projectcard {
		color: white;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 5px 15px;
		border-radius: 10px;
		gap: 15px;
		user-select: none;
	}

	.projectcard h1 {
		font-size: 20px;
		font-weight: 600;
	}

	.projectcard p {
		font-size: 16px;
	}

	.projectcard .right_side {
		display: flex;
		flex-wrap: wrap;
		width: 100%;
		justify-content: space-between;
		align-items: center;
	}

	.projectcard:hover {
		opacity: 0.93;
	}

	.projectIcon {
		width: 30px;
		height: auto;
	}
</style>
