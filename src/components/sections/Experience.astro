---
import Card from "../Card.astro";

const projects = [
    {
        title: "Founder of vesselspro",
        desc: "Vessels.pro is a modern (web)application for fleet management, maintenance, and more.",
        icon: "/images/projects/vesselspro.png",
        href: "https://vessels.pro",
    },
    {
        title: "Web developer @ Mythic",
        desc: "The game launcher to play Windows games on macOS with wide compatibility.",
        icon: "/images/projects/mythic.png",
        href: "https://getmythic.app",
    },
    {
        title: "Design founder @ outfits.bio",
        desc: "A platform to keep track of your clothing, share, and find outfit inspiration on the web.",
        icon: "/images/projects/outfitsbio.png",
        href: "https://outfits.bio",
    },
];

const schoolprojects = [
    {
        title: "Vier op een rij (Webgame)",
        href: "https://webgame.jeremybosma.nl",
    },
    // {
    //     title: "Seriousapps Project",
    //     href: "https://seriousapps-project.vercel.app",
    // },
    {
        title: "Rekenapp in PHP",
        href: "https://rekenapp.jeremybosma.nl",
    },
    {
        title: "Irritante Webpage",
        href: "https://irritante-webpage.jeremybosma.nl/",
    },
    // {
    //     title: "Portfolio mockups in Figma",
    //     href: "https://www.figma.com/proto/deejQtKzKBApU6uIYjmVX4/02_did%2Fwsh-portfolio-1.0?page-id=0%3A1&type=design&node-id=1-3&viewport=557%2C445%2C0.22&t=8chiAav0CLI1frG3-1&scaling=min-zoom&starting-point-node-id=1%3A3&mode=design",
    // },
];
---

<div class="col">
    <section class="projects">
        <h1 class="title">Experience</h1>
        <div class="projectscol">
            {projects.map((project) => <Card {...project} />)}
        </div>
    </section>

    <details>
        <summary class="title">School Assignments</summary><br />
        <section class="projects schoolprojects">
            {schoolprojects.map((project) => <Card {...project} />)}
        </section>
    </details>
</div>

<style>
    .col {
        display: flex;
        flex-direction: column;
        gap: 50px;
    }

    .projects {
        gap: 20px;
    }

    .projectscol {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .schoolprojects {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        max-width: 520px;
    }

    summary {
        cursor: pointer;
        user-select: none;
        display: block;
        padding-left: 1rem;
        position: relative;
    }

    summary:before {
        content: "";
        border-width: 0.38rem;
        border-style: solid;
        border-color: transparent transparent transparent #4b4b4b;
        position: absolute;
        top: 0.7rem;
        left: -0.1rem;
        transform-origin: 0.2rem 50%;
        transition: 0.25s transform ease;
    }

    details[open] > summary:before {
        transform: rotate(90deg);
    }

    details summary::-webkit-details-marker {
        display: none;
    }
</style>
